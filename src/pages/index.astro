<script>
	function adjustPadding() {
		const perfil = document.querySelector(".perfil");
		const basico = document.querySelector(".basico");

		if (perfil && basico) {
			const perfilHeight = perfil.clientHeight + perfil.offsetTop;
			basico.style.paddingTop = perfilHeight + "px";

			// Ajustar la altura interna del contenido de basico
			const contenidoBasico = basico.querySelector(".contenido");
			if (contenidoBasico) {
				contenidoBasico.style.height = `calc(100vh - ${perfilHeight}px)`;
			}
			document.documentElement.style.setProperty(
				"--dynamic-padding",
				`${perfilHeight}px`,
			);
		} else {
			console.error(
				"No se pudieron encontrar los elementos .perfil o .basico.",
			);
		}
	}

	// Ejecutar al cargar la página y al cambiar el tamaño de la ventana
	window.addEventListener("load", adjustPadding);
	window.addEventListener("resize", adjustPadding);

	function adjustPadding2() {
		const nombre = document.querySelector(".nombre");
		const historial = document.querySelector(".historial");
		console.log("Hice algo");
		if (nombre && historial) {
