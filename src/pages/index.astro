			historial.style.paddingTop = nombreHeight + "px";
		} else {
			console.error(
				"No se pudieron encontrar los elementos .perfil o .basico.",
			);
		}
	}

	// Ejecutar al cargar la página y al cambiar el tamaño de la ventana
	window.addEventListener("load", adjustPadding2);
	window.addEventListener("resize", adjustPadding2);

	let items = document.querySelectorAll(".slider .item");
	let next = document.getElementById("next");
	let prev = document.getElementById("prev");

	let active = 0;
	function loadShow() {
		console.log("El activo es: ", active);
		let stt = 0;
		items[active].style.transform = `none`;
		items[active].style.zIndex = 1;
		items[active].style.filter = "none";
		items[active].style.opacity = 1;
		//items[active].style.display = "block"
		for (var i = active + 1; i < items.length; i++) {
			stt++;
			items[i].style.transform =
				`translateX(${120 * stt}px) scale(${1 - 0.2 * stt}) perspective(16px) rotateY(-1deg)`;
			items[i].style.zIndex = -stt;
			items[i].style.filter = "blur(5px)";
			items[i].style.opacity = stt > 2 ? 0 : 0.6;
			//items[i].style.display = "none"
		}
		stt = 0;
		for (var i = active - 1; i >= 0; i--) {
			stt++;
			items[i].style.transform =
				`translateX(${-120 * stt}px) scale(${1 - 0.2 * stt}) perspective(16px) rotateY(1deg)`;
			items[i].style.zIndex = -stt;
			items[i].style.filter = "blur(5px)";
			items[i].style.opacity = stt > 2 ? 0 : 0.6;
			//items[i].style.display = "none"
		}
	}
	loadShow();
	next.onclick = function () {
		active = active - 1 >= 0 ? active - 1 : items.length - 1;
		loadShow();
	};
	prev.onclick = function () {
		active = active + 1 < items.length ? active + 1 : 0;
		loadShow();
	};

	const botones = document.querySelectorAll(".botones button");
	const contenidos = document.querySelectorAll(".contenido");

	contenidos[0].style.display = "block";
	botones.forEach((button, index) => {
		button.addEventListener("click", () => mostrarContenido(index));
	});

	function mostrarContenido(indice: number) {
		// Remover la clase "activo" de todos los botones y ocultar todos los contenidos
		botones.forEach((boton, i) => {
			boton.classList.remove("activo");
			contenidos[i].style.display = "none";
		});

		// Agregar la clase "activo" al botón clicado y mostrar el contenido correspondiente
		botones[indice].classList.add("activo");
		contenidos[indice].style.display = "block";
	}




	function adjustPadding3() {
		const nombre = document.querySelector(".nombre");
		const historial = document.querySelector(".botones");
		const carusel =  document.querySelector(".carousel")

		if (nombre && historial && carusel) {
			const nombreHeight = nombre.clientHeight + nombre.offsetTop;
			carusel.style.height = `calc(100vh - 50px - ${nombreHeight + historial.clientHeight}px)`;

		} else {
			console.error(
				"No se pudieron encontrar los elementos .perfil o .basico.",
			);
		}
	}

	// Ejecutar al cargar la página y al cambiar el tamaño de la ventana
	window.addEventListener("load", adjustPadding3);
	window.addEventListener("resize", adjustPadding3);
</script>
